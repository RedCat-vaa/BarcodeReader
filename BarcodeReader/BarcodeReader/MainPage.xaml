<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarcodeReader.MainPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="buttonStyle" TargetType="Button">
                <Setter Property="TextColor" Value="BlueViolet"/>
                <Setter Property="BackgroundColor" Value="LightGray"/>
                <Setter Property="FontSize" Value="Medium" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout BackgroundColor="DimGray">
        <Button Text="Документы" Margin="5,5,5,5"
                HorizontalOptions="Center" WidthRequest="230" Clicked="ToDocumentPage"
                Style="{StaticResource buttonStyle}" HeightRequest="60"></Button>
        <Button Text="Настройки" Margin="5,5,5,5"
                HorizontalOptions="Center" WidthRequest="230" Clicked="ToSettingsPage"
                Style="{StaticResource buttonStyle}" HeightRequest="60"></Button>
    </StackLayout>

</ContentPage>
